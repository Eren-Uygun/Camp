import core.utilities.results.SuccessResult;
import dataAccess.abstracts.BrandRepository;
import entities.Brand;

public class BrandManager implements BrandService{
	
	private BrandRepository brandRepository;

	@Override
	public Result insert(Brand entity) {
		brandRepository.insert(entity);
		return new SuccessResult("Ekleme işlemi yapıldı.");
	}

	@Override
	public Result update(Brand entity) {
		brandRepository.update(entity);
		return new SuccessResult("Güncelleme işlemi yapıldı.");
	}

	@Override
	public Result delete(Brand entity) {
		brandRepository.delete(entity);
		return new SuccessResult("Silme işlemi yapıldı.");
	}

	@Override
	public DataResult<Brand> getById() {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public DataResult<List<Brand>> getAll() {
		// TODO Auto-generated method stub
		return null;
	}

}
